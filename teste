axios.get('https://api.github.com/users/diego3g/repos')
    .then(function(response){
    var fullnames = document.createElement('li');
    fullnames =response.data;
    console.log(fullnames);
    mostrarfullname()
  })

   .catch(function(error){console.log(error);});


   var listElement = document.querySelector('#app ul');
   var inputElement = document.querySelector('#app input');
   var btnElement= document.querySelector('#app button');
   var repos = [];

   function mostrarfullname(){
       for(repo of repos){
           var element = document.createElement('li');
           element=fullnames;
           var repotext = document.createTextNode(repo);
           element.appendChild(repotext);
           listElement.appendChild(element);
           console.log(repos)
   }}
   mostrarfullname();

function addnome(){
   var repotext = inputElement.value;
   repos.push(repotext);
   inputElement.value = '';
   mostrarfullname();

}btnElement.onclick = addnome;

