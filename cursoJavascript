EX1

</html>
    
<html> 
<head>
    <meta charset="UTF-8">
<title> Curso 1 </title>

</head>
<body>
    <div id="app">
        <div class="box"></div>
        <button class="botao">Botão 1</button>
    </div>
    <script>
     var btnElement = document.querySelector('button.botao');
     var x;
        x=0;
     btnElement.onclick = function (){
    
        var boxElement =document.querySelector('.box');
        boxElement.style.width = 100;
        boxElement.style.height = 100;
        boxElement.style.backgroundColor = '#f00';
        x=x+1;
        console.log(x);
    }


</script>

</body>

</html>

EX2

</html>
    
<html> 
<head>
    <meta charset="UTF-8">
<title> Curso 1 </title>

</head>
<body>
    <div id="app">
        <div class="box"></div>
        <button class="botao">Botão 1</button>
    </div>
    <script>
     var btnElement = document.querySelector('button.botao');
     var cxElement =document.querySelector('div.box')
     var x;
        x=0;
     btnElement.onclick = function (){
    
        var boxElement =document.querySelector('.box');
        boxElement.style.width = 100;
        boxElement.style.height = 100;
        boxElement.style.backgroundColor = '#f00';
        x=x+1;
        console.log(x);
    }
    cxElement.onmouseover = function(){
        var boxElement =document.querySelector('.box');
        boxElement.style.backgroundColor = newColor;
    }
    
    function getRandomColor() {
 var letters = "0123456789ABCDEF";
 var color = "#";
 for (var i = 0; i < 6; i++) {
 color += letters[Math.floor(Math.random() * 16)];
 }
 return color;
}
var newColor = getRandomColor();


</script>

</body>

</html>


EX3

</html>
    
<html> 
<head>
    <meta charset="UTF-8">
<title> Curso 1 </title>

</head>
<body>
    <div id="app">
        <ul></ul>
    </div>
    <script>
     var nomes = ["Diego", "Gabriel", "Lucas"];
    var listElement = document.querySelector('#app ul')


    function mostrar(){
        for(nomes of nomes){
            var element = document.createElement('li');
            var nomestext = document.createTextNode(nomes);

            element.appendChild(nomestext);
            listElement.appendChild(element);
            console.log(nomes)
    }
    }


mostrar();

</script>

</body>

</html>


EX 4


    
<html> 
<head>
    <meta charset="UTF-8">
<title> Curso 1 </title>

</head>
<body>
    <div id="app">
        <ul></ul>
        <input type='text' placeholder="Digite um Nome...">
        <button>Adicionar</button>
    </div>
    <script>
     
    var listElement = document.querySelector('#app ul');
    var inputElement = document.querySelector('#app input');
    var btnElement= document.querySelector('#app button');
    var nomes = [
    "Diego",
    "Gabriel",
    "Lucas"
];

    function mostrarnomes(){
        listElement.innerHTML = '';
        for(nome of nomes){
            var element = document.createElement('li');
            var nomestext = document.createTextNode(nome);
            
            element.appendChild(nomestext);
            listElement.appendChild(element);
            console.log(nomes)
    }
    }

    mostrarnomes();

function addnome(){
    var nomestext = inputElement.value;
    nomes.push(nomestext);
    inputElement.value = '';
    mostrarnomes();

}
btnElement.onclick = addnome;


</script>

</body>

</html>
