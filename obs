<body>
    <div id='app'>

    </div>
    <script> 
      var linkElement = document.createElement('a');
      linkElement.setAttribute('href', 'http://edesoft.com.br');
      linkElement.setAttribute('title', 'Site da Edesoft');
    
    var textElement = document.createTextNode('Acessar');
    linkElement.appendChild(textElement);
    
    var ctnElement =document.querySelector('#app');
    ctnElement.appendChild(linkElement);
     </script>

</body>

