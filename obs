            <script> 
              var linkElement = document.createElement('x');
              linkElement.setAttribute('href', 'http://edesoft.com.br');
            
            var textElement = document.createTextNode('Acessar Site');
            linkElement.appendChild(textElement)
            
            var ctnElement =document.querySelector('#app');
            ctnElement.appendChild(linkElement);
             </script>
    
        </body>

