    <body>
        <script> 
        function rtnsx(sexo) {
            switch (sexo){
                case 'M': 
                return 'Masculino';
                case 'm': 
                return 'Masculino';
                case 'F': 
                return 'Feminino';
                case 'f': 
                return 'Feminino';
                default: 
                return 'Indefinido';

            }
        }
        var x = rtnsx('g');
        console.log(x);
    </script>
    </body>

